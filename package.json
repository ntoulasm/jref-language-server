{
  "name": "jref-language-server",
  "displayName": "jref-language-server",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./client/out/extension.js",
  "contributes": {
    "commands": [],
    "languages": [
      {
        "id": "jref",
        "extensions": [
          ".jref"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b ./",
    "watch": "tsc -b ./ -watch",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm test --workspaces --if-present"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "mocha": "^11.1.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
